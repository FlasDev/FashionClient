<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:layout_height="match_parent">

    <android.support.design.widget.TextInputLayout
        android:inputType="textPersonName"
        android:id="@+id/profile_edit_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:drawableLeft="@drawable/ic_person_24dp"
            android:id="@+id/profile_edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/name"
            android:drawableStart="@drawable/ic_person_24dp" />

    </android.support.design.widget.TextInputLayout>



    <android.support.design.widget.TextInputLayout
        android:inputType="textPersonName"
        android:layout_below="@id/profile_edit_name_layout"
        android:id="@+id/profile_edit_mail_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/profile_edit_mail"
            android:drawableLeft="@drawable/ic_email_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/mail"
            android:drawableStart="@drawable/ic_email_24dp" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout

        android:layout_below="@id/profile_edit_mail_layout"
        android:id="@+id/profile_edit_address_layout"
        android:layout_weight="1.8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:inputType="text"
            android:id="@+id/profile_edit_address"
            android:drawableLeft="@drawable/ic_home_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/address"
            android:drawableStart="@drawable/ic_home_24dp" />
    </android.support.design.widget.TextInputLayout>





</RelativeLayout>